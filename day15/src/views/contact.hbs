<body>
<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/assets/image/dumbways logo.jpg" style="height: 50px; width: 50px;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                {{#if isLogin}}
                    <li class="nav-item">
                        <a class="nav-link" href="/addproject">My Project</a>
                    </li> 
                    <li class="nav-item">
                        <a class="nav-link" href="/testimonial">Testimonial</a>
                    </li>
                {{/if}}
            </ul>

            {{#if isLogin}}
                <div style="display: flex; justify-content: start; margin: 10px; gap:20px;">
                    <li class="nav-item" style="display: flex; justify-content: center;">
                        <a aria-current="page" style="text-decoration: none; color: black;" href="/logout">Logout</a>
                    </li>
                </div>
            {{else}}
                <div style="display: flex; justify-content: start; margin: 10px; gap:20px;">
                    <li class="nav-item" style="display: flex; justify-content: center;">
                        <a aria-current="page" style="text-decoration: none; color: black;" href="/login">Login</a>
                    </li>
                    <li class="nav-item" style="display: flex; justify-content: center;">
                        <a aria-current="page" href="/register" style="text-decoration: none; color: black;">Register</a>
                    </li>
                </div>
            {{/if}}
               
            <form class="d-flex">
                <button class="btn btn-secondary rounded-pill" type="submit">
                    <a href="/contact" style="color: white; text-decoration: none;">Contact Me</a>
                </button>
            </form>
        </div>
    </div>
</nav>
    
    
    <div class="col-12" style="background-color: #e3e7eb; text-align: center;">
        <div class="col-md-4 mx-auto" style=" padding: 20px; border-radius: 10px;">
            <h1>GET IN TOUCH</h1>
            <form>
                <div class="mb-3">
                    <label for="inputName" class="d-flex fw-bold">Name</label>
                    <input type="text" id="name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="inputEmail" class="d-flex fw-bold">Email</label>
                    <input type="email" id="email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="inputphone" class="d-flex fw-bold">Phone Number</label>
                    <input type="tel" id="PhoneNumber" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="inputSubject" class="d-flex fw-bold">Subject</label>
                    <select id="inputSubject" class="form-select">
                        <option value=""></option>
                        <option value="Frontend Developer">Frontend Developer</option>
                        <option value="Backend Developer">Backend Developer</option>
                        <option value="Fullstack Developer">Fullstack Developer</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="message" class="d-flex fw-bold">Your Message</label>
                    <textarea id="Message" class="form-control"></textarea>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="button" class="btn btn-primary rounded-pill" style="background-color :#111727;"
                        onclick="submitData()">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <script src="./assets/js/contact.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    

</body>

</html>